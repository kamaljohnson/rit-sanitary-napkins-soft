<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@color/colorAccent">
    <EditText
            android:paddingLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/email_edit_text"
            app:layout_constraintStart_toStartOf="@+id/username_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/username_edit_text"
            android:background="@drawable/rounded_edittext_register"
            android:hint="Email"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/username_edit_text"/>
    <EditText
            android:paddingLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textWebPassword"
            android:text=""
            android:ems="10"
            android:id="@+id/password_edit_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/email_edit_text"
            app:layout_constraintStart_toStartOf="@+id/email_edit_text"
            android:background="@drawable/rounded_edittext_register"
            android:textColor="@color/cardview_shadow_start_color"
            android:hint="@string/password"
    />
    <EditText
            android:paddingLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/username_edit_text" android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:background="@drawable/rounded_edittext_register"
            android:textColor="@color/cardview_shadow_start_color"
            android:hint="Username"
    />
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/login_button" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/password_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/password_edit_text"
            app:layout_constraintStart_toStartOf="@+id/password_edit_text" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorPrimary"
    />
    <TextView
            android:text="Already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/already_have_account_textview" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/login_button" app:layout_constraintEnd_toEndOf="@+id/login_button"
            app:layout_constraintStart_toStartOf="@+id/login_button"/>
</android.support.constraint.ConstraintLayout>