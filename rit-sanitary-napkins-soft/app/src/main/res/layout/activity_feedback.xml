<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/main_background"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FeedbackActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext_register"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginEnd="8dp"
            android:hint="Feedback"
            android:textColorHint="@color/main_background"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/text_color"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <Button
            android:text="Send"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="@+id/editText2"
            app:layout_constraintStart_toStartOf="@+id/editText2"
            android:textColor="@color/text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText2"/>
</android.support.constraint.ConstraintLayout>