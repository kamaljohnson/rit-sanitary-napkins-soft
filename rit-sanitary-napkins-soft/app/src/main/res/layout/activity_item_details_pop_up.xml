<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/main_background"
        android:layout_height="match_parent"
        tools:context=".ItemDetailsPopUp">

    <Button
            android:text="Buy"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/buy_button" android:layout_marginBottom="200dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:textColor="@color/text_color"
            android:background="@drawable/rounded_button"/>
    <TextView
            android:text="0Rs"
            android:textColor="@color/text_color"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/item_cost_text"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/buy_button" app:layout_constraintEnd_toEndOf="@+id/buy_button"
            app:layout_constraintStart_toStartOf="@+id/buy_button"
            android:textAlignment="center"
            android:textSize="50dp"/>
    <TextView
            android:text="wallet balane"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.34"
            android:textSize="20dp"/>
    <TextView
            android:text="100Rs"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:layout_height="wrap_content"
            android:id="@+id/wallet_balance_text"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="32dp" android:layout_marginLeft="32dp"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"/>
</android.support.constraint.ConstraintLayout>