<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".WalletTopUpActivity">
    <Button
            android:text="topup booth"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/topup_booth_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.65"/>
    <Button
            android:text="Online Payment"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/online_payment_button" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/topup_booth_button" app:layout_constraintEnd_toEndOf="@+id/topup_booth_button"
            app:layout_constraintStart_toStartOf="@+id/topup_booth_button"/>
</android.support.constraint.ConstraintLayout>