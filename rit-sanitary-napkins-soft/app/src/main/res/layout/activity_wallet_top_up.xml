<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        tools:context=".WalletTopUpActivity">
    <Button
            android:text="Receive"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/receive_money_from_wallet" app:layout_constraintEnd_toEndOf="@+id/send_money_from_wallet"
            app:layout_constraintStart_toStartOf="@+id/send_money_from_wallet"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/text_color"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/send_money_from_wallet"/>

    <Button
            android:text="Send"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/send_money_from_wallet" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/rounded_button"
            android:textColor="@color/text_color"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="200dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.22000003"/>

    <Button
            android:text="Online Payment"
            android:background="@drawable/rounded_button"
            android:textColor="@color/text_color"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/online_payment_button" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/receive_money_from_wallet" app:layout_constraintEnd_toEndOf="@+id/receive_money_from_wallet"
            app:layout_constraintStart_toStartOf="@+id/receive_money_from_wallet"/>
</android.support.constraint.ConstraintLayout>