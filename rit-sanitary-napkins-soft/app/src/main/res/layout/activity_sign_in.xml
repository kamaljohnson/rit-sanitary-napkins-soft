<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignInActivity" android:background="@color/colorAccent">
    <EditText
            android:paddingLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/signin_email_edit_text"
            android:background="@drawable/rounded_edittext_register"
            android:hint="Email"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_marginEnd="32dp"
            android:textColorHint="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginTop="250dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:paddingLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textWebPassword"
            android:text=""
            android:ems="10"
            android:id="@+id/signin_password_edit_text" android:layout_marginTop="8dp"
            android:textColorHint="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/signin_email_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/signin_email_edit_text"
            app:layout_constraintStart_toStartOf="@+id/signin_email_edit_text"
            android:background="@drawable/rounded_edittext_register"
            android:textColor="@color/cardview_shadow_start_color"
            android:hint="@string/password"
    />
    <Button
            android:text="Sign in"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/sign_in" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/signin_password_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/signin_password_edit_text"
            app:layout_constraintStart_toStartOf="@+id/signin_password_edit_text" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorPrimary"
    />
    <TextView
            android:textAlignment="center"
            android:text="create an account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_an_account_text" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_in" app:layout_constraintEnd_toEndOf="@+id/sign_in"
            app:layout_constraintStart_toStartOf="@+id/sign_in"/>
</android.support.constraint.ConstraintLayout>